{
  "name": "alcohol/sf-minimal-demo",
  "description": "A minimalistic Symfony demo application",
  "require": {
    "php": ">=5.4",
    "symfony/symfony": "~2.7",
    "symfony/monolog-bundle": "~2.7",
    "predis/predis": "~1.0",
    "doctrine/cache": "~1.0",
    "vlucas/phpdotenv": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.6",
    "phpunit/php-invoker": "@stable",
    "mybuilder/phpunit-accelerator": "~1.1"
  },
  "autoload": {
    "psr-4": {
      "Alcohol\\Paste\\": ["source/Paste"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alcohol\\Paste\\Tests\\": ["tests/Paste"]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "[ -f .env ] || cp -v .env.example .env"
    ],
    "post-update-cmd": [
      "[ -f .env ] || cp -v .env.example .env"
    ]
  }
}
