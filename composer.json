{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^5.5.0 || ^7.0.0",
        "doctrine/cache": "^1.4.0",
        "predis/predis": "^1.0.3",
        "symfony/symfony": "^2.8.0 || ^3.0.0",
        "symfony/monolog-bundle": "^2.8.0",
        "vlucas/phpdotenv": "^2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.7 || ^5.0.0",
        "phpunit/php-invoker": "@stable",
        "mybuilder/phpunit-accelerator": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Alcohol\\Paste\\": ["source"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alcohol\\Paste\\": ["tests/integration"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "[ -f .env ] || cp -v .env.example .env"
        ],
        "post-update-cmd": [
            "[ -f .env ] || cp -v .env.example .env"
        ]
    }
}
