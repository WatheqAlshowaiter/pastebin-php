#!/usr/bin/env php
<?php

declare(strict_types=1);

/*
 * (c) Rob Bast <rob.bast@gmail.com>
 *
 * For the full copyright and license information, please view
 * the LICENSE file that was distributed with this source code.
 */

set_time_limit(0);

$loader = require_once __DIR__ . '/../source/bootstrap.php';

use Alcohol\Paste\Application;
use Symfony\Bundle\FrameworkBundle\Console\Application as Console;
use Symfony\Component\Console\Input\ArgvInput;

$input = new ArgvInput();
$environment = $input->getParameterOption(['--env', '-e'], getenv('SYMFONY_ENV'));
$application = new Application($environment, (bool) getenv('SYMFONY_DEBUG'));
$console = new Console($application);
$console->run($input);
